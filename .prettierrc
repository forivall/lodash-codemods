{
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "overrides": [
        {
            "files": ["*.json", "*.md", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["transforms/__testfixtures__/*.output.js"],
            "options": {
                "tabWidth": 2,
                "singleQuote": false,
                "trailingComma": "none"
            }
        }
    ]
}
